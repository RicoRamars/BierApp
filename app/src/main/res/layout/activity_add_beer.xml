<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:orientation="vertical"
    tools:context=".AddEditBeerActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:padding="8dp"
            android:text="Rating"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>

        <NumberPicker
            android:id="@+id/number_picker_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignBaseline="@id/text_view_rating">

        </NumberPicker>

        <EditText
            android:id="@+id/edit_text_beername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/text_view_rating"
            android:layout_alignParentStart="true"
            android:hint="The name of the beer"
            android:inputType="text"
            />

        <EditText
            android:id="@+id/edit_text_beertype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/text_view_rating"
            android:layout_alignParentStart="true"
            android:layout_below="@id/edit_text_beername"
            android:hint="Type of beer"
            android:inputType="text"
            />

        <EditText
            android:id="@+id/edit_text_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/text_view_rating"
            android:layout_alignParentStart="true"
            android:layout_below="@id/edit_text_beertype"
            android:hint="Description"
            android:inputType="textMultiLine"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>